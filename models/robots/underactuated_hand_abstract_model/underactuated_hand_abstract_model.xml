    <!-- conventions of D-H parameters here are DIFFERENT from wikipedia, x axis points to NEXT (NOT previous) link frame -->


    <!-- thumb -->
    <chain>
        <transform>
            <translation>0 35 0</translation>
            <rotation>180 x</rotation>
            <rotation>90 y</rotation>
        </transform>
        <joint type="Revolute">
            <theta>d0</theta>
            <d>0</d>
            <a>50</a>
            <alpha>0</alpha>
            <minValue>-45</minValue>
            <maxValue>45</maxValue>
            <viscousFriction>1.0e+3</viscousFriction>
        </joint>
        <joint type="Revolute">
            <theta>d1</theta>
            <d>0</d>
            <a>35</a>
            <alpha>0</alpha>
            <minValue>0</minValue>
            <maxValue>120</maxValue>
            <viscousFriction>1.0e+3</viscousFriction>
        </joint>
        <link dynamicJointType="Revolute">proximal_link.xml</link>
        <link dynamicJointType="Revolute">distal_link.xml</link>        
    </chain>

    <!-- finger1 -->
    <chain>
        <transform>
            <translation>-25 -35 0</translation>
            <rotation>90 z</rotation>

        </transform>
